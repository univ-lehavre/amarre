{
  "name": "@univ-lehavre/amarre",
  "version": "0.0.1",
  "type": "module",
  "files": [
    ".env",
    "build",
    "static",
    "node_modules"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "openapi:generate": "tsx scripts/generate-openapi.ts",
    "test": "vitest run",
    "contract:lint": "npx @stoplight/spectral lint static/api/openapi.json",
    "contract:mock": "npx @stoplight/prism-cli mock ./static/api/openapi.json -p 4011",
    "changeset-status": "changeset status",
    "changeset-add": "changeset add",
    "changeset-version": "changeset version",
    "changeset-publish": "changeset publish",
    "remove:node": "find . -name 'node_modules' -type d | xargs rm -fR",
    "remove:build": "find . -name 'build' -type d | xargs rm -fR",
    "remove:svelte": "find . -name '.svelte-kit' -type d | xargs rm -fR",
    "clean": "run-p remove:node remove:build remove:svelte"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@changesets/cli": "^2.29.8",
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.1",
    "@stoplight/prism-cli": "^5.14.2",
    "@stoplight/prism-http": "^5.12.0",
    "@stoplight/spectral": "^6.5.0",
    "@sveltejs/adapter-node": "^5.4.0",
    "@sveltejs/kit": "^2.49.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/lodash": "^4.17.21",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.13.0",
    "globals": "^16.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.3",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.45.2",
    "svelte-check": "^4.3.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.2.6",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "luxon": "^3.7.2",
    "node-appwrite": "^20.3.0",
    "openapi-response-validator": "^12.1.3",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
